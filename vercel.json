{
  "version": 2,
  "name": "chainlink-pay",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_STACKS_NETWORK": "testnet",
    "REACT_APP_AXELAR_ENV": "testnet"
  },
  "build": {
    "env": {
      "REACT_APP_STACKS_NETWORK": "testnet",
      "REACT_APP_AXELAR_ENV": "testnet"
    }
  }
}
